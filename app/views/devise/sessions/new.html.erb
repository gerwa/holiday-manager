<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3><%= I18n.t('deviseforms.sign_in')%></h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to I18n.t('deviseforms.sign_up'), new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label I18n.t('deviseforms.email') %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to I18n.t('deviseforms.forgotpassword'), new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label I18n.t('deviseforms.password') %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit I18n.t('deviseforms.sign_in'), :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %><%= I18n.t('deviseforms.rememberme') %>
          </label>
        </div>
      <% end -%>
  <% end %>
</div>
