- if @user.errors.any?
  .error_explanation
    %h2
      = pluralize(@user.errors.count, "error") 
      prohibited this user from being saved:

    %ul
    - @user.errors.full_messages.each do |msg|
      %li= msg

.field
  = f.label :email
  .controls
    = f.email_field :email

.field
  = f.label :role, "Rolle"
  .controls
    = f.select :role, %w[user vip admin]

